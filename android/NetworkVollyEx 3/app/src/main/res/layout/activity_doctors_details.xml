<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rahul.networkvollyex.DoctorDetails">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/doctorName21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:text="Doctor name" />
            <TextView
                android:id="@+id/doctorName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctorName21"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:text="Doctor name" />
            <TextView
                android:id="@+id/doctorExperience12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"
                android:layout_below="@+id/doctorName2"
                android:text="Experience(Years)" />
            <TextView
                android:id="@+id/doctorExperience1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_below="@+id/doctorExperience12"
                android:text="doctorExperience" />
            <TextView
                android:id="@+id/doctorEmail12"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"
                android:layout_below="@+id/doctorExperience1"
                android:text="Email" />
            <TextView
                android:id="@+id/doctorEmail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"
                android:layout_below="@+id/doctorEmail12"
                android:text="doctorEmail" />
            <TextView
                android:id="@+id/doctoreducation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"
                android:layout_below="@+id/doctorEmail1"
                android:text="Education" />
            <TextView
                android:id="@+id/doctoreducation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_below="@+id/doctoreducation1"
                android:text="doctoreducation" />

            <TextView
                android:id="@+id/doctor_recommendation"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:text="256" />

            <ImageView
                android:layout_toLeftOf="@+id/doctor_recommendation"
                android:id="@+id/like_img"
                android:layout_marginTop="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/like" />
            <TextView
                android:id="@+id/specialityString1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:layout_below="@+id/doctoreducation"
                android:text="Speciality"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/specialityString"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:layout_below="@+id/specialityString1"/>
            <ListView
                android:id="@+id/clinicList"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/specialityString">

            </ListView>
            <ListView
                android:id="@+id/specialityList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clinicList">

            </ListView>




        </RelativeLayout>





</RelativeLayout>
