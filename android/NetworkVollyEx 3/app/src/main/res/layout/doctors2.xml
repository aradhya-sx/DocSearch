<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/doctorName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_toLeftOf="@+id/like_img"
                android:layout_alignParentLeft="true"
                android:paddingTop="5dp"

                android:text="Doctor name" />
            <TextView
                android:id="@+id/doctorSpeciality1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_below="@+id/doctorName1"
                android:text="doctorSpeciality" />
            <TextView
                android:id="@+id/doctor_loc"

                android:layout_below="@+id/doctorSpeciality1"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/location"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:text="BTM" />

            <ImageView
                android:layout_below="@+id/doctorSpeciality1"

                android:layout_alignParentLeft="true"
                android:id="@+id/location"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location1" />

            <TextView
                android:id="@+id/doctor_recommendation"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:text="256" />

            <ImageView
                android:layout_toLeftOf="@+id/doctor_recommendation"
                android:id="@+id/like_img"
                android:layout_above="@+id/locationimg"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:src="@drawable/like" />

            <ImageView
                android:id="@+id/List_arrow"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/doctor_recommendation"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arrow" />




        </RelativeLayout>




</RelativeLayout>