<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <GridLayout
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="90dp"
            android:layout_weight="1"
            android:id="@+id/imageView"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/doctorimg"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/practodoc" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/name_speciality_layout"
            android:layout_width="90dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:text="Doctor name" />

            <TextView
                android:id="@+id/doctorSpeciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="Speciality" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loacationMonyTiming_layout"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/locstion_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/locationimg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingLeft="1dp"
                    android:src="@drawable/location1" />

                <TextView
                    android:id="@+id/doctorLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="Location" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/money_layout"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/moneyimg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingLeft="1dp"
                    android:src="@drawable/location1" />

                <TextView
                    android:id="@+id/doctorFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="...INR" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/money_layout"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/timingimg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingLeft="1dp"
                    android:src="@drawable/location1" />

                <TextView
                    android:id="@+id/doctorTiming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="...Time" />
            </LinearLayout>

        </LinearLayout>


    </GridLayout>


</LinearLayout>